<%- include("../partials/header") %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="/Images/Logo.png" alt="logo" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title text-center mb-3">Reset Password</h5>
                    <form action="/account/reset/<%= token %>" method="POST" class="validate-form" novalidate>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="password" type="password" placeholder="Enter password" name="password" required>
                            <label for="password">New Password</label>
                            <div class="valid-feedback">
                                Looks good!!
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="confirm" type="password" placeholder="Re-enter password" name="confirm" required>
                            <label for="confirm">Confirm Password</label>
                            <div class="valid-feedback">
                                Looks good!!
                            </div>
                        </div>
                        <div class="row d-flex justify-content-end pr-3">
                            <button class="btn btn-outline-primary col-md-6 btn-lg">
                                Update Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
